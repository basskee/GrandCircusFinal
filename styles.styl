html, body, a, p, section, div, nav, img,
header, footer, h1, h2, h3, h4, h5, h6, ul, li, span
  margin 0
  padding 0                 /* CSS Reset */
  -moz-box-sizing border-box
  box-sizing border-box

@font-face
	font-family 'GrandHotel'
	src url('../fonts/GrandHotel-Regular.otf')

/*=====Start Tag-Wide=====*/
html, body
  height 100%
section
  padding-top 40px
p
  font-family 'Lato', sans-serif
  font-size 16px
  color #838383
  font-weight 700
h1
  font-family "Oswald", cursive
  font-weight 700
  line-height 76px
  position absolute
  top 100px
  color white
  font-size 70px
h2
  font-family 'Oswald', sans-serif
  font-weight 700
  font-size 36px
  color #E1B596
  margin 10px 0 25px 0;
  text-align center
  text-transform uppercase
h3
  font-family 'Oswald', sans-serif
  font-weight 400
  font-size 22px
  color #E1B596
  margin 10px 0
h4
  font-family 'Raleway', sans-serif
  font-weight 900;
  font-size 16px
  color #2c2b2b
  margin 10px 0
  text-transform capitalize
h5
  font-family 'Lato', sans-serif
  font-size 16px
  font-weight 700
  color #000
  font-style italic
  .area
    text-align left
input, textarea
  margin 10px
  border 3px double #659D44
  border-radius 3px
  font-family 'Lato', sans-serif
  font-weight 400
  background-color #F6f6f6
footer
  background-color #75ad4c
  color #FFF
  .footcontain
    display inline-block
    font-size 14px
    text-align center
    padding 10px
  .copyright
    color white
/*=====End Tag-Wide=====*/

/*=====Start Nav=====*/
.navbar
  z-index 10
  position fixed
  top 0
  width 100%
  height 48.4px
  margin 0
  border-radius 0
  padding 0
  background-color #75ad4c
  .big-nav
    display none
  ul
    position relative
    display inline-table
    width 100%
    margin -1px 0 0 -1px
    padding 0
    list-style none
    li
      float left
      a
        display block
        padding 9px 10px
        font-family "GrandHotel", "Oswald"
        font-size 2.3em
        line-height 1em
        color #fff
        text-decoration none
      ul
        display none
        position absolute
        top 99%
        left 1px
        width 100%
        background #528130
        li
          float none
          position relative
          font-family "Oswald"
        a
          text-align center
          padding 5px 10px
        a:hover
          background #629140
    li:hover
      background-color #629140
    li:hover > ul
      display block
    li:hover a
      color #fff
    .hamburger
      float right
      font-size 1.6em
      font-weight bold
      a
        padding 0 20px
      ul
        li
          font-size .5em
          font-weight normal
  ul:after
    content ""
    clear both
      display block
/*=====End Nav=====*/

/*=====Start Home=====*/
#home
  height 350px
  position relative
  padding 0
  #image-box
    position absolute
    width 100%
    top 48px
    height 320px
    background-image url("../img/greenbike1200.jpg")
    background-position-x 70%
    background-position-y 90%
    background-size 200%
  .main-title
    font-family "Oswald", cursive
    font-weight 700
    color #e1b596
  #brand-message
    font-family 'Lato', sans-serif
    font-size 30px
    font-weight 700
    color #fff
    font-style italic
    position absolute
    top 170px
/*=====End Home=====*/

/*=====Start About=====*/
#about
  width 330px
  margin-left 14px
  padding-top 60px
  text-align center
  p
    text-align justify
/*=====End About=====*/

.fa
  margin-right 10px !important

.miles, .time, .stops
  font-family 'Lato', sans-serif
  font-size 12px
  font-weight 400
  color #2c2b2b
  text-transform uppercase
  margin-left 25px

.login-list
  font-family 'Lato', sans-serif
  font-weight 700
  font-size 18px
  color #a52a2a;


/*=====Start Rides=====*/
#rides
  padding-top 60px
  h3
    text-align center
#map
  height 250px
  width 100%
#directions
  margin-top 25px
  margin-left 25px
  font-size 28px
  font-weight 500
#search
  margin-top 25px
#search-form
  text-align center
.my-route
  width 250px !important
  margin 15px 5px
  padding 5px
  display inline-block
  vertical-align top
.ride-title
  a
    text-decoration none
    color brown
    text-align center
.login
  margin-left 25px
  li
    font-family 'Lato', sans-serif
    font-size 12px
    color #838383
    font-weight 400
.ride-description
  text-align left
  font-style normal
.ride-descrip
  margin 8px 0px
  text-align center
  color #a52a2a
  font-size 20px
  font-style italic
.ride-specifics
  display inline-block
  padding 25px
.ride-info
  font-family 'Lato', sans-serif
  font-size 16px
  color #838383
  font-weight 500
  p
    margin 8px 0px
.ride-info-name
  font-family 'Lato', sans-serif
  font-size 18px
  color #838383
  font-weight 700
  font-weight bold
.map-title
  font-size 25px
  color #a52a2a
  font-family 'Oswald', sans-serif
  font-weight 500
.map-info
  font-family 'Lato', sans-serif
  font-size 16px
  color #a52a2a
  font-weight 700
  text-align center
  margin 10px
.fb-comment-wrapper
  width 320px
  margin 50px auto
/*=====End Rides=====*/

/*=====Start Contact=====*/
#contact
  width 100%
  input, textarea
    margin 6px auto
    padding 5px
  h4
    text-align center
  p
    text-align center
  .contactform
    width 100%
    margin-bottom 50px
/*=====End Contact=====*/

// Members Only Pop-up
#members-only
  display none
  height 110px
  width 200px
  border-radius 15px
  padding 5px 5px 5px 10px
  text-align left
  font-size 14px
  font-weight bold
  color #E9CF92
  background-color #4F2512
  p
    margin 0
    padding 0
    font-size 14px
    font-weight bold
    color #E9CF92
  img
    display inline-block
    float right

/*=====Start Media Queries=====*/
@media only screen and (min-width: 960px)
  #home
    width 100%
    text-align center
    height 500px
    padding 0
    #image-box
      background url("../img/pic2.0.jpg") center center no-repeat
      height 100%
      background-position-y 85%
  #about
    width 100%
  .my-route
    width 250px !important
    margin 5px
    padding 5px
    display inline-block
    vertical-align top
  .miles, .time, .stops
    margin-left 60px
  #fb-row
    margin-bottom 25px
  h2
    font-size 3em
  .fb-comment-wrapper
    width 600px
  .navbar
    height 48.4px
    .big-nav
      display inline-block
      a
        height 50.4px
        font-family "Oswald"
        font-size 1.75em
        line-height 1.25em
    .big-nav:nth-child(2n)
      a
        font-style italic
    .big-nav:nth-child(3n)
      float right
    .big-nav:nth-child(4n)
      float right
    .big-nav:nth-child(4n)
      a
        font-style normal
    .big-nav:nth-child(5n)
      float right
    .hamburger
      display none
/*=====End Media Queries=====*/
